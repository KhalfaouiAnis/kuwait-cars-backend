{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "baseUrl": "./src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@services/*": ["services/*"],
      "@config/*": ["config/*"],
      "@libs/*": ["libs/*"],
      "@middlewares/*": ["middlewares/*"],
      "@routes/*": ["routes/*"],
      "@utils/*": ["utils/*"],
    },
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2023",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}