generator client {
  provider        = "prisma-client"
  output          = "../src/generated/prisma"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String   @id @default(cuid())
  fullname        String
  phone           String   @unique @db.VarChar(15)
  role            UserRole @default(USER)
  email           String?  @unique
  province        Json
  area            Json?
  location        Json?
  password        String?
  avatar          Media?
  expo_push_token String?
  unread_count    Int      @default(0)
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  google_id   String?
  apple_id    String?
  facebook_id String?

  otp           Otp[]
  ads           Ad[]
  favorited_ads Ad[]           @relation("UserFavoritedAds")
  flagged_ads   Ad[]           @relation("UserFlaggededAds")
  notifications Notification[]
  adDrafts      AdDraft[]

  @@map("users")
}

model Otp {
  id         String   @id @default(cuid())
  code       String
  expires_at DateTime
  created_at DateTime @default(now())
  used       Boolean  @default(false)

  user_id String
  user    User   @relation(fields: [user_id], references: [id], onDelete: Cascade)

  wamid           String?
  delivery_status String?

  @@map("otps")
}

model Media {
  id              String    @id @default(cuid())
  public_id       String
  original_url    String
  transformed_url String?
  media_type      MediaType @default(THUMBNAIL)
  created_at      DateTime  @default(now())

  ad_id String?
  ad    Ad?     @relation(fields: [ad_id], references: [id])

  user_id String? @unique()
  user    User?   @relation(fields: [user_id], references: [id])

  @@map("media")
}

model Ad {
  id          String   @id @default(cuid())
  title       String
  ad_type     String
  description String   @db.Text
  is_paid     Boolean? @default(false)
  is_free     Boolean? @default(false)
  plan        Json

  status      AdStatus? @default(ACTIVE)
  brand       String?
  model       String?
  ad_category String?
  price       Decimal?  @db.Decimal(10, 2)

  province Json?
  area     Json?
  location Json?

  year           Int?
  exterior_color String?
  mileage        Decimal? @db.Decimal(10, 2)
  mileage_unit   String?  @db.VarChar(2)

  fuel_type      String?
  cylinders      String?
  transmission   String?
  under_warranty Boolean?
  roof           String?

  additional_number        String?
  second_additional_number String?
  hide_license_plate       Boolean?

  contact_whatsapp Boolean? @default(false)
  receive_calls    Boolean? @default(false)
  xcar_calls       Boolean? @default(false)
  xcar_chat        Boolean? @default(false)

  user_id      String
  views        BigInt @default(0)
  user         User   @relation(fields: [user_id], references: [id])
  favorited_by User[] @relation("UserFavoritedAds")
  flagged_by   User[] @relation("UserFlaggededAds")

  media Media[]

  expires_in Int       @default(30)
  created_at DateTime  @default(now())
  deleted_at DateTime?

  @@map("ads")
}

model AdDraft {
  id         String   @id @default(cuid())
  content    Json
  user_id    String
  user       User     @relation(fields: [user_id], references: [id])
  ad_type    String
  step_index Int      @default(0)
  updated_at DateTime @updatedAt
  created_at DateTime @default(now())

  @@index([user_id])
  @@map("ad_drafts")
}

model View {
  id         String   @id @default(cuid())
  ad_id      String
  user_id    String?
  created_at DateTime @default(now())

  @@unique([ad_id, user_id])
  @@map("views")
}

model Notification {
  id             String       @id @default(uuid())
  user_id        String
  title          String
  body           String
  data           Json?
  is_read        Boolean      @default(false)
  status         NotifiStatus @default(QUEUED) // QUEUED, SENT, DELIVERED, FAILED, READ
  ticket_id      String?      @unique // Expo's ticket ID
  receipt_id     String?      @unique // Expo's receipt ID
  delivery_error String? // Log specific failure reasons (e.g., DeviceNotRegistered)

  created_at DateTime @default(now())
  user       User     @relation(fields: [user_id], references: [id])
}

enum UserRole {
  ADMIN
  USER
  GUEST
}

enum AdStatus {
  ACTIVE
  COMPLETED
}

enum MediaType {
  THUMBNAIL
  IMAGE
  VIDEO
}

enum NotifiStatus {
  QUEUED
  SENT
  DELIVERED
  FAILED
  READ
}
