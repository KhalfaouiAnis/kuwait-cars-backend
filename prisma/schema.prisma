generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  fullname     String
  phone_number BigInt
  password     String
  role         UserRole @default(STUDENT)
  avatar       String?
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  @@map("users")
}

enum UserRole {
  ADMIN
  STUDENT
  INSTRUCTOR
}
